{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@components": ["src/components"],
      "@public/*": ["public/*"],
      "@public": ["public"],
      "@definitions/*": ["src/definitions/*"],
      "@definitions": ["src/definitions"],
      "@interfaces/*": ["src/interfaces/*"],
      "@interfaces": ["src/interfaces"],
      "@styles/*": ["src/styles/*"],
      "@styles": ["src/styles"],
      "@components/icons/*": ["src/components/icons/*"],
      "@components/icons": ["src/components/icons"],
      "@i18n": ["./i18n"],
      "@/components/*": ["src/notion/components/*"],
      "@/lib/*": ["src/notion/lib/*"],
      "@/styles/*": ["src/notion/styles/*"]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "src/notion/third-party/**/*"
  ]
}
